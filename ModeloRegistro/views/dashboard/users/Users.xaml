<Page x:Class="ModeloRegistro.views.dashboard.users.Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModeloRegistro.views.dashboard.users"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Users"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Width="700"
      Height="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="486*" />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="Users"
                   VerticalAlignment="Center"
                   Margin="0"
                   Foreground="#FF404E67"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid>
                <TextBox x:Name="buscar"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Buscar"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Padding="45,16,12,16"
                         Height="49"
                         FontSize="14"
                         materialDesign:HintAssist.FloatingScale="0.80"
                         HorizontalAlignment="Left"
                         Width="223">
                </TextBox>
                <materialDesign:PackIcon Width="30"
                                         Height="30"
                                         Kind="Magnify"
                                         Foreground="#FF404E67"
                                         VerticalAlignment="Center"
                                         Margin="7,0,0,0" />
            </Grid>
        </Grid>
    </Grid>
</Page>
