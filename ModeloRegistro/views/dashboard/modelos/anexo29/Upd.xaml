<Page x:Class="ModeloRegistro.views.dashboard.modelos.anexo29.Upd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModeloRegistro.views.dashboard.modelos.anexo29"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Upd"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Width="800"
      Height="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="486*" />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="Actualizar Anexo 29"
                   VerticalAlignment="Center"
                   Margin="24,0,0,0"
                   Foreground="#FF404E67"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap" />
        <Grid Grid.Row="1">
            <Button Style="{StaticResource MaterialDesignFlatLightButton}"
                    ToolTip="MaterialDesignFlatLightButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="Button_Click">
                <WrapPanel>
                    <materialDesign:PackIcon Kind="ArrowLeftDropCircleOutline"
                                             Foreground="#FF404E67"
                                             Width="20"
                                             Height="20"
                                             VerticalAlignment="Center" />
                    <TextBlock Foreground="#FF404E67"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="3,1,0,0">Atrás</TextBlock>
                </WrapPanel>
            </Button>
        </Grid>
        <ScrollViewer Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           TextWrapping="Wrap">SOLICITUD DE PODER ESPECIAL PARA ESCRITURA DE AUTORIZACION PARA SUBSANAR ASIENTO DE INSCRIPCION EN EL REGISTRO DEL ESTADO CIVIL</TextBlock>
                <DatePicker x:Name="fecha_solicitud"
                            materialDesign:HintAssist.Hint="Fecha de Solicitud"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">DATOS DEL PODERDANTE:</TextBlock>
                <TextBox x:Name="nombre"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Nombre y apellidos" />
                <TextBox x:Name="sexo"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Sexo" />
                <TextBox x:Name="lugar_nacimineto_municipio"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Lugar de Nacimiento; Municipio" />
                <TextBox x:Name="lugar_nacimineto_provincia"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Lugar de Nacimiento; Provincia" />
                <DatePicker x:Name="fecha_nacimineto"
                            materialDesign:HintAssist.Hint="Fecha de Nacimiento"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="estado_civil"
                         materialDesign:HintAssist.Hint="Estado Civil"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="ciudadania"
                         materialDesign:HintAssist.Hint="Ciudadanía:"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="ocupacion"
                         materialDesign:HintAssist.Hint="Ocupación"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="direccion"
                         materialDesign:HintAssist.Hint="Dirección:"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="carnet_pasaporte"
                         materialDesign:HintAssist.Hint="Número de identidad permanente o pasaporte"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="condicion_migratoria"
                         materialDesign:HintAssist.Hint="CONDICIÓN MIGRATORIA (RESIDENTE EN EL TERRITORIO NACIONAL O EMIGRADO)"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBox x:Name="correo"
                         materialDesign:HintAssist.Hint="DIRECCION DE CORREO ELECTRONICO"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBox x:Name="celular"
                         materialDesign:HintAssist.Hint="NUMERO DE CELULAR"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">DATOS DEL APODERADO:</TextBlock>

                <TextBox x:Name="nombre_apoderado"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Nombre y apellidos" />
                <TextBox x:Name="sexo_apoderado"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Sexo Apoderado" />
                <TextBox x:Name="lugar_nacimineto_municipio_apoderado"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Lugar de Nacimiento; Municipio" />
                <TextBox x:Name="lugar_nacimineto_provincia_apoderado"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Lugar de Nacimiento; Provincia" />
                <DatePicker x:Name="fecha_nacimineto_apoderado"
                            materialDesign:HintAssist.Hint="Fecha de Nacimiento"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="estado_civil_apoderado"
                         materialDesign:HintAssist.Hint="Estado Civil"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="ciudadania_apoderado"
                         materialDesign:HintAssist.Hint="Ciudadanía:"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="ocupacion_apoderado"
                         materialDesign:HintAssist.Hint="Ocupación"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="direccion_apoderado"
                         materialDesign:HintAssist.Hint="Dirección:"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="carnet_pasaporte_apoderado"
                         materialDesign:HintAssist.Hint="Número de identidad permanente o pasaporte"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="condicion_migratoria_apoderado"
                         materialDesign:HintAssist.Hint="CONDICIÓN MIGRATORIA (RESIDENTE EN EL TERRITORIO NACIONAL O EMIGRADO)"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Datos de la inscripción que se va a subsanar:</TextBlock>
                <TextBox x:Name="nombre_menor"
                         materialDesign:HintAssist.Hint="Nombre del menor"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="natural_de"
                         materialDesign:HintAssist.Hint="Natural de"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <DatePicker x:Name="fecha_nacimineto_menor"
                            materialDesign:HintAssist.Hint="Fecha de nacimiento"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="edad"
                         Margin="12"
                         materialDesign:HintAssist.Hint="Edad del niño"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1" />
                <TextBox x:Name="tomo"
                         Margin="12"
                         materialDesign:HintAssist.Hint="Tomo de la inscripción"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1" />
                <TextBox x:Name="folio"
                         Margin="12"
                         materialDesign:HintAssist.Hint="Folio de la inscripción"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1" />
                <TextBox x:Name="registro_estado_civil"
                         Margin="12"
                         materialDesign:HintAssist.Hint="Registro del Estado Civil de"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1" />
                <TextBox x:Name="tipo_tramites"
                         Margin="12"
                         materialDesign:HintAssist.Hint="Especifique para qué tipo de trámite usted otorga dicho poder:"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         TextWrapping="Wrap" />


                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ElevationAssist.Elevation="Dp4"
                        Background="#FF404E67"
                        Foreground="#FFFAFAFA"
                        BorderBrush="#FF404E67"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="12"
                        Width="246"
                        Height="46"
                        Click="Button_Click_1">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="CircleEditOutline"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock VerticalAlignment="Center"
                                   Margin="7,0,0,0">Actualizar</TextBlock>
                    </WrapPanel>
                </Button>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
