<Page x:Class="ModeloRegistro.views.dashboard.modelos.anexo2.Upd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModeloRegistro.views.dashboard.modelos.anexo2"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Upd"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Width="800"
      Height="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="486*" />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="Actualizar Anexo 2"
                   VerticalAlignment="Center"
                   Margin="24,0,0,0"
                   Foreground="#FF404E67"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap" />
        <Grid Grid.Row="1">
            <Button Style="{StaticResource MaterialDesignFlatLightButton}"
                    ToolTip="MaterialDesignFlatLightButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="Button_Click">
                <WrapPanel>
                    <materialDesign:PackIcon Kind="ArrowLeftDropCircleOutline"
                                             Foreground="#FF404E67"
                                             Width="20"
                                             Height="20"
                                             VerticalAlignment="Center" />
                    <TextBlock Foreground="#FF404E67"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="3,1,0,0">Atrás</TextBlock>
                </WrapPanel>
            </Button>
        </Grid>
        <ScrollViewer Grid.Row="2">
            <StackPanel Orientation="Vertical"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">SOLICITUD DE SERVICIO CONSULAR</TextBlock>
                <WrapPanel>
                    <CheckBox x:Name="pasaporte_1ra_vez"
                              Content="Pasaporte por primera vez"
                              Margin="12" />
                    <CheckBox x:Name="prorrogas"
                              Content="Prórrogas"
                              Margin="12" />
                    <CheckBox x:Name="he_1"
                              Content="HE-1"
                              Margin="12" />
                    <CheckBox x:Name="he_4"
                              Content="HE-4"
                              Margin="12" />
                    <CheckBox x:Name="dvt"
                              Content="DVT"
                              Margin="12" />
                    <CheckBox x:Name="renovacion_pasaporte"
                              Content="Renovación de Pasaporte"
                              Margin="12" />
                    <CheckBox x:Name="habilitacion_de_entrada"
                              Content="Habilitación de Entrada"
                              Margin="12" />
                    <CheckBox x:Name="he_3"
                              Content="HE-3"
                              Margin="12" />
                    <CheckBox x:Name="he_11"
                              Content="HE-11"
                              Margin="12" />
                    <CheckBox x:Name="ccv"
                              Content="CCV"
                              Margin="12" />
                </WrapPanel>



                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <DatePicker x:Name="fecha_de_solicitud"
                                materialDesign:HintAssist.Hint="Fecha de Solicitud"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True" />

                    <TextBox x:Name="no_pasaporte"
                             Margin="12"
                             Grid.Column="1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Número de Pasaporte" />

                    <TextBox x:Name="carnet"
                             Margin="12"
                             Grid.Column="2"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Carné de Identidad" />
                </Grid>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Datos Generales</TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="primer_apellido"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Primer apellido" />
                    <TextBox x:Name="segundo_apellido"
                             Margin="12"
                             Grid.Column="1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Segundo apellido" />
                    <TextBox x:Name="primer_nombre"
                             Margin="12"
                             Grid.Column="2"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Primer nombre" />
                    <TextBox x:Name="segundo_nombre"
                             Margin="12"
                             Grid.Column="3"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Segundo nombre" />

                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="padre"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Padre" />
                    <TextBox x:Name="madre"
                             Margin="12"
                             Grid.Column="1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Madre" />
                    <TextBox x:Name="caracteristicas_especiales"
                             Margin="12"
                             Grid.Column="2"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Características especiales" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="estatura"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Estatura(cm)" />
                    <TextBox x:Name="estado_civil"
                             Margin="12"
                             Grid.Column="1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Estado Civil" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="sexo"
                              materialDesign:HintAssist.Hint="Sexo"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.FloatingScale="1"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Margin="12">
                        <ComboBoxItem Content="Masculino" />
                        <ComboBoxItem Content="Femenino" />
                    </ComboBox>

                    <ComboBox x:Name="color_ojos"
                              materialDesign:HintAssist.Hint="Color Ojos"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.FloatingScale="1"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Margin="12"
                              Grid.Column="1">
                        <ComboBoxItem Content="Claros" />
                        <ComboBoxItem Content="Negros" />
                        <ComboBoxItem Content="Pardos" />
                    </ComboBox>

                    <ComboBox x:Name="color_piel"
                              materialDesign:HintAssist.Hint="Color Piel"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.FloatingScale="1"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Margin="12"
                              Grid.Column="2">
                        <ComboBoxItem Content="Blanca" />
                        <ComboBoxItem Content="Negra" />
                        <ComboBoxItem Content="Amarilla" />
                        <ComboBoxItem Content="Mestiza" />
                        <ComboBoxItem Content="Albina" />
                    </ComboBox>


                    <ComboBox x:Name="color_cabello"
                              materialDesign:HintAssist.Hint="Color cabello"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.FloatingScale="1"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Margin="12"
                              Grid.Column="3">
                        <ComboBoxItem Content="Canoso" />
                        <ComboBoxItem Content="Negro" />
                        <ComboBoxItem Content="Rubio" />
                        <ComboBoxItem Content="Castaño" />
                        <ComboBoxItem Content="Rojo" />
                        <ComboBoxItem Content="Otros" />
                    </ComboBox>
                </Grid>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Clasificación Migratoria al salir de Cuba</TextBlock>

                <WrapPanel>
                    <CheckBox x:Name="permiso_emigracion"
                              Content="Permiso Emigración"
                              Margin="12" />
                    <CheckBox x:Name="residente_en_el_exterior"
                              Content="Residente en el Exterior"
                              Margin="12" />
                    <CheckBox x:Name="asunto_oficial"
                              Content="Asunto Oficial"
                              Margin="12" />
                    <CheckBox x:Name="pve"
                              Content="Permiso de Viaje al Exterior (PVE)"
                              Margin="12" />
                    <CheckBox x:Name="psi"
                              Content="Permiso de Salida Indefinido (PSI)"
                              Margin="12" />
                    <CheckBox x:Name="residencia_exterior"
                              Content="Residente en el Exterior Especial"
                              Margin="12" />
                    <CheckBox x:Name="pre"
                              Content="Permiso de Residencia en el Exterior (PRE)"
                              Margin="12" />
                    <CheckBox x:Name="pvt"
                              Content="Permiso de Viaje Temporal (PVT)"
                              Margin="12" />
                    <CheckBox x:Name="pre_e"
                              Content="Permiso de Residenciaen el Exterior Especial (PRE-E)"
                              Margin="12" />
                    <CheckBox x:Name="salida_ilegal"
                              Content="Salida Ilegal"
                              Margin="12" />
                </WrapPanel>

                <DatePicker x:Name="fecha_de_salida"
                            materialDesign:HintAssist.Hint="Fecha de Salida"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Width="167"
                            HorizontalAlignment="Left" />

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Lugar de nacimiento</TextBlock>

                <WrapPanel>
                    <TextBox x:Name="pais"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="País"
                             Width="357" />
                    <TextBox x:Name="provincia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Provincia"
                             Width="357" />
                    <TextBox x:Name="municipio_ciudad"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Municipio/ Ciudad"
                             Width="357" />
                    <DatePicker x:Name="fecha_de_nacimiento"
                                materialDesign:HintAssist.Hint="Fecha de Nacimiento"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Width="357" />
                </WrapPanel>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Lugar de Residencia actual</TextBlock>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="direccion"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Dirección (Calle, Ave, Nr., Apto, entre calles)" />
                    <TextBox x:Name="codigo_postal"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Código Postal"
                             HorizontalContentAlignment="Stretch"
                             Grid.Column="1" />

                    <TextBox x:Name="provincia_estado_region"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Provincia – Estado - Región"
                             Grid.Row="1" />
                    <TextBox x:Name="pais_residencia_actual"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="País"
                             HorizontalContentAlignment="Stretch"
                             Grid.Column="1"
                             Grid.Row="1" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="telefono_residencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Teléfono" />
                    <TextBox x:Name="fax_residencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Fax"
                             Grid.Column="1" />
                    <TextBox x:Name="email_residencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Email"
                             Grid.Column="2" />
                </Grid>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Datos Laborales o de Estudio actual</TextBlock>
                <WrapPanel>
                    <TextBox x:Name="nombre_centro_trabajo_estudio"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nombre de Centro de Trabajo/ Estudio"
                             Width="360" />
                    <TextBox x:Name="profesion"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Profesión"
                             Width="165" />
                    <TextBox x:Name="ocupacion"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Ocupación"
                             Width="165" />
                    <TextBox x:Name="direccion_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Dirección (calle, ave, nr., apto, entre calles)"
                             Width="548" />
                    <TextBox x:Name="codigo_postal_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Código Postal"
                             Width="165" />
                    <TextBox x:Name="provincia_estado_region_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Provincia – Estado - Región"
                             Width="548" />
                    <TextBox x:Name="pais_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="País"
                             Width="165" />
                    <TextBox x:Name="telefono_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Teléfono"
                             Width="230" />
                    <TextBox x:Name="fax_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Fax"
                             Width="230" />
                    <TextBox x:Name="email_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="E-mail"
                             Width="230" />
                    <TextBox x:Name="nivel_de_escolaridad"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nivel de escolaridad"
                             Width="230" />
                    <TextBox x:Name="ocupacion_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Ocupación"
                             Width="230" />
                    <TextBox x:Name="profecion_oficio_centro_estudio_trabajo"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Profesión u oficio"
                             Width="230" />
                </WrapPanel>

                <TextBlock Margin="0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">Nombre y apellidos de la referencia en Cuba</TextBlock>
                <TextBlock Margin="0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">(persona que puede ser contactada para verificar sus generales, añadir, de ser posible, el número telefónico)</TextBlock>
                <TextBox x:Name="nombre_referencia_cuba"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Nombre y apellidos de la referencia en Cuba" />
                <TextBox x:Name="direccion_referencia_cuba"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Dirección de la Referencia (incluir la provincia)" />

                <TextBlock Margin="0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">Lugar de Residencia en Cuba (dos últimas direcciones)</TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBox x:Name="direccion1_referencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Dirección uno" />
                    <DatePicker x:Name="fecha_direccion1_referencia_desde"
                                materialDesign:HintAssist.Hint="Desde"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Grid.Column="1" />
                    <DatePicker x:Name="fecha_direccion1_referencia_fecha_hasta"
                                materialDesign:HintAssist.Hint="Hasta"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Grid.Column="2" />

                    <TextBox x:Name="direccion2_referencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Dirección dos"
                             Grid.Row="1" />
                    <DatePicker x:Name="fecha_direccion2_referencia_desde"
                                materialDesign:HintAssist.Hint="Desde"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Grid.Column="1"
                                Grid.Row="1" />
                    <DatePicker x:Name="fecha_direccion2_referencia_fecha_hasta"
                                materialDesign:HintAssist.Hint="Hasta"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Grid.Column="2"
                                Grid.Row="1" />
                </Grid>

                <WrapPanel>
                    <TextBox x:Name="apellido_soltera_referencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Apellidos de soltera"
                             Width="165" />
                    <TextBox x:Name="otros_nombres_referencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Otros nombres"
                             Width="165" />
                    <TextBox x:Name="numero_residencia_referencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Número de residencia"
                             Width="165" />

                    <TextBox x:Name="pasaporte_extranjero_referencia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Pasaporte extranjero"
                             Width="165" />
                </WrapPanel>

                <TextBlock Margin="0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">Para la confección del Pasaporte el titular presentó y se comprobó con:</TextBlock>

                <TextBlock Margin="0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">Pasaporte vencido</TextBlock>
                <WrapPanel>
                    <TextBox x:Name="numero_pasaporte_vencido"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Número"
                             Width="230" />
                    <DatePicker x:Name="fecha_expedicion_pasaporte_vencido"
                                materialDesign:HintAssist.Hint="Fecha de expedición Lugar"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Width="230" />
                    <TextBox x:Name="lugar_pasaporte_vencido"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Lugar"
                             Width="230" />
                </WrapPanel>

                <TextBlock Margin="0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">Certificación de Nacimiento</TextBlock>
                <WrapPanel>
                    <TextBox x:Name="tomo_certificado_nacimiento"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Tomo"
                             Width="230" />
                    <TextBox x:Name="folio_certificado_nacimiento"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Folio"
                             Width="230" />
                    <TextBox x:Name="registro_civil_certificado_nacimiento"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Registro Civil"
                             Width="230" />
                </WrapPanel>

                <TextBlock Margin="0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">Inscripción Consular</TextBlock>
                <WrapPanel>
                    <TextBox x:Name="numero_inscripcion_consular"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Número"
                             Width="230" />
                    <DatePicker x:Name="fecha_inscripcion_consular"
                                materialDesign:HintAssist.Hint="De Fecha"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Width="230" />
                    <TextBox x:Name="arancel_inscripcion_consular"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Arancel"
                             Width="230" />
                </WrapPanel>

                <TextBox x:Name="valoracion_consular"
                         Height="200"
                         VerticalAlignment="Top"
                         Margin="12"
                         materialDesign:HintAssist.Hint="Valoración Consular"
                         AcceptsReturn="True"
                         IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" />

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ElevationAssist.Elevation="Dp4"
                        Background="#FF404E67"
                        Foreground="#FFFAFAFA"
                        BorderBrush="#FF404E67"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="12"
                        Width="246"
                        Height="46">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="CircleEditOutline"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock VerticalAlignment="Center"
                                   Margin="7,0,0,0">Actualizar</TextBlock>
                    </WrapPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
