<Page x:Class="ModeloRegistro.views.dashboard.modelos.anexo24.Upd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModeloRegistro.views.dashboard.modelos.anexo24"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Upd"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Width="800"
      Height="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="486*" />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="Actualizar Anexo 24"
                   VerticalAlignment="Center"
                   Margin="24,0,0,0"
                   Foreground="#FF404E67"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap" />
        <Grid Grid.Row="1">
            <Button Style="{StaticResource MaterialDesignFlatLightButton}"
                    ToolTip="MaterialDesignFlatLightButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="Button_Click">
                <WrapPanel>
                    <materialDesign:PackIcon Kind="ArrowLeftDropCircleOutline"
                                             Foreground="#FF404E67"
                                             Width="20"
                                             Height="20"
                                             VerticalAlignment="Center" />
                    <TextBlock Foreground="#FF404E67"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="3,1,0,0">Atrás</TextBlock>
                </WrapPanel>
            </Button>
        </Grid>
        <ScrollViewer Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">SOLICITUD DE PODER ESPECIAL PARA COMPRA VENTA DE AUTOS</TextBlock>
                <DatePicker x:Name="fecha_solicitud"
                            materialDesign:HintAssist.Hint="Fecha de Solicitud"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">DATOS DEL PODERDANTE:</TextBlock>
                <TextBox x:Name="nombre"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Nombre y apellidos" />
                <TextBox x:Name="lugar_nacimineto_municipio"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Lugar de Nacimiento; Municipio" />
                <TextBox x:Name="lugar_nacimineto_provincia"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Lugar de Nacimiento; Provincia" />
                <DatePicker x:Name="fecha_nacimineto"
                            materialDesign:HintAssist.Hint="Fecha de Nacimiento"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="estado_civil"
                         materialDesign:HintAssist.Hint="Estado Civil"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="ciudadania"
                         materialDesign:HintAssist.Hint="Ciudadanía:"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="ocupacion"
                         materialDesign:HintAssist.Hint="Ocupación"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="direccion"
                         materialDesign:HintAssist.Hint="Dirección:"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="carnet_pasaporte"
                         materialDesign:HintAssist.Hint="Número de identidad permanente o pasaporte"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="nombre_apellido_padres"
                         materialDesign:HintAssist.Hint="Nombres y apellidos de los padres"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="condicion_migratoria"
                         materialDesign:HintAssist.Hint="CONDICIÓN MIGRATORIA (RESIDENTE EN EL TERRITORIO NACIONAL O EMIGRADO)"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBox x:Name="correo"
                         materialDesign:HintAssist.Hint="DIRECCION DE CORREO ELECTRONICO"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBox x:Name="celular"
                         materialDesign:HintAssist.Hint="NUMERO DE CELULAR"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">DATOS DEL APODERADO:</TextBlock>

                <TextBox x:Name="nombre_apoderado"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Nombre y apellidos" />
                <TextBox x:Name="lugar_nacimineto_municipio_apoderado"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Lugar de Nacimiento; Municipio" />
                <TextBox x:Name="lugar_nacimineto_provincia_apoderado"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Lugar de Nacimiento; Provincia" />
                <DatePicker x:Name="fecha_nacimineto_apoderado"
                            materialDesign:HintAssist.Hint="Fecha de Nacimiento"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="estado_civil_apoderado"
                         materialDesign:HintAssist.Hint="Estado Civil"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="ciudadania_apoderado"
                         materialDesign:HintAssist.Hint="Ciudadanía:"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="ocupacion_apoderado"
                         materialDesign:HintAssist.Hint="Ocupación"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="direccion_apoderado"
                         materialDesign:HintAssist.Hint="Dirección:"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="carnet_pasaporte_apoderado"
                         materialDesign:HintAssist.Hint="Número de identidad permanente o pasaporte"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="condicion_migratoria_apoderado"
                         materialDesign:HintAssist.Hint="CONDICIÓN MIGRATORIA (RESIDENTE EN EL TERRITORIO NACIONAL O EMIGRADO)"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">DATOS DEL VEHÍCULO:</TextBlock>

                <TextBox x:Name="marca"
                         materialDesign:HintAssist.Hint="Marca"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="modelo"
                         materialDesign:HintAssist.Hint="Modelo"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="anno"
                         materialDesign:HintAssist.Hint="Del año"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="color"
                         materialDesign:HintAssist.Hint="Color"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="nro_motor"
                         materialDesign:HintAssist.Hint="Número de Motor"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="nro_chasis"
                         materialDesign:HintAssist.Hint="Número de Chasis"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="matricula"
                         materialDesign:HintAssist.Hint="Matrícula"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:TextFieldAssist.HasClearButton="True" />

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ElevationAssist.Elevation="Dp4"
                        Background="#FF404E67"
                        Foreground="#FFFAFAFA"
                        BorderBrush="#FF404E67"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="12"
                        Width="246"
                        Height="46"
                        Click="Button_Click_1">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="CircleEditOutline"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock VerticalAlignment="Center"
                                   Margin="7,0,0,0">Actualizar</TextBlock>
                    </WrapPanel>
                </Button>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
