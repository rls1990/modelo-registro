<Page x:Class="ModeloRegistro.views.dashboard.modelos.anexo14.Upd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ModeloRegistro.views.dashboard.modelos.anexo14"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="300"
      Title="Upd"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Width="800"
      Height="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="486*" />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="Actualizar Anexo 14"
                   VerticalAlignment="Center"
                   Margin="24,0,0,0"
                   Foreground="#FF404E67"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap" />
        <Grid Grid.Row="1">
            <Button Style="{StaticResource MaterialDesignFlatLightButton}"
                    ToolTip="MaterialDesignFlatLightButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="Button_Click">
                <WrapPanel>
                    <materialDesign:PackIcon Kind="ArrowLeftDropCircleOutline"
                                             Foreground="#FF404E67"
                                             Width="20"
                                             Height="20"
                                             VerticalAlignment="Center" />
                    <TextBlock Foreground="#FF404E67"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="3,1,0,0">Atrás</TextBlock>
                </WrapPanel>
            </Button>
        </Grid>
        <ScrollViewer Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">SOLICITUD TRANSCRIPCION DE MATRIMONIO</TextBlock>
                <TextBox x:Name="quien_suscribe"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Quien suscribe" />
                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">DATOS DEL CONTRAYENTE</TextBlock>
                <WrapPanel>
                    <TextBox x:Name="nombre_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nombre(s)"
                             Width="165" />
                    <TextBox x:Name="ciudadania_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Ciudadanía"
                             Width="165" />
                    <TextBox x:Name="primer_apellido_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Primer Apellido"
                             Width="165" />
                    <TextBox x:Name="segundo_apellido_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Segundo Apellido"
                             Width="165" />
                    <TextBox x:Name="registro_civil_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Registro Civil donde está Inscripto"
                             Width="165" />
                    <TextBox x:Name="tomo_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Tomo"
                             Width="165" />
                    <TextBox x:Name="folio_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Folio"
                             Width="165" />
                    <TextBox x:Name="lugar_nacimiento_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Lugar de nacimiento"
                             Width="165" />
                    <DatePicker x:Name="fecha_nacimiento_contrayente"
                                materialDesign:HintAssist.Hint="Fecha Nacimiento"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Width="165" />
                    <TextBox x:Name="nro_pasaporte_identidad_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nro. Pasaporte o Identidad"
                             Width="165" />
                    <TextBox x:Name="estado_civil_antes_matrimonio_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Estado Civil: (antes del matrimonio )"
                             Width="165" />
                    <TextBox x:Name="ocupacion_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Ocupación"
                             Width="165" />
                    <TextBox x:Name="padre_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nombre(s) y Apellidos del Padre"
                             Width="165" />
                    <TextBox x:Name="madre_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nombre(s) y Apellidos de la Madre"
                             Width="165" />
                    <TextBox x:Name="domicilio_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Domicilio permanente"
                             Width="165" />

                </WrapPanel>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">DATOS DE LA CONTRAYENTE</TextBlock>
                <WrapPanel>
                    <TextBox x:Name="nombre_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nombre(s)"
                             Width="165" />
                    <TextBox x:Name="ciudadania_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Ciudadanía"
                             Width="165" />
                    <TextBox x:Name="primer_apellido_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Primer Apellido"
                             Width="165" />
                    <TextBox x:Name="segundo_apellido_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Segundo Apellido"
                             Width="165" />
                    <TextBox x:Name="registro_civil_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Registro Civil donde está Inscripto"
                             Width="165" />
                    <TextBox x:Name="tomo_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Tomo"
                             Width="165" />
                    <TextBox x:Name="folio_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Folio"
                             Width="165" />
                    <TextBox x:Name="lugar_nacimiento_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Lugar de nacimiento"
                             Width="165" />
                    <DatePicker x:Name="fecha_nacimiento_la_contrayente"
                                materialDesign:HintAssist.Hint="Fecha Nacimiento"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Width="165" />
                    <TextBox x:Name="nro_pasaporte_identidad_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nro. Pasaporte o Identidad"
                             Width="165" />
                    <TextBox x:Name="estado_civil_antes_matrimonio_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Estado Civil: (antes del matrimonio )"
                             Width="165" />
                    <TextBox x:Name="ocupacion_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Ocupación"
                             Width="165" />
                    <TextBox x:Name="padre_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nombre(s) y Apellidos del Padre"
                             Width="165" />
                    <TextBox x:Name="madre_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nombre(s) y Apellidos de la Madre"
                             Width="165" />
                    <TextBox x:Name="domicilio_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Domicilio permanente"
                             Width="165" />
                    <TextBox x:Name="observaciones_la_contrayente"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Observaciones"
                             Width="165" />
                </WrapPanel>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">DATOS DEL CERTIFCADO DE MATRIMONIO</TextBlock>
                <WrapPanel>
                    <TextBox x:Name="lugar_certificado"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Lugar donde se efectúo el Matrimonio (municipio, estado y país)"
                             Width="165" />
                    <TextBox x:Name="tomo_certificado"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Tomo"
                             Width="165" />
                    <TextBox x:Name="folio_certificado"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Folio"
                             Width="165" />
                    <DatePicker x:Name="fecha_formalizacion"
                                materialDesign:HintAssist.Hint="Fecha de Formalización"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Width="165" />
                    <TextBox x:Name="nombre_funcionario_expidió_certificado"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Nombre del Funcionario que expidió el Certificado de Matrimonio"
                             Width="165" />
                    <TextBox x:Name="cargo_funcionario_expidió_certificado"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Cargo"
                             Width="165" />
                    <DatePicker x:Name="fecha_solicitud"
                                materialDesign:HintAssist.Hint="Fecha de Solicitud"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Width="165" />
                </WrapPanel>
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ElevationAssist.Elevation="Dp4"
                        Background="#FF404E67"
                        Foreground="#FFFAFAFA"
                        BorderBrush="#FF404E67"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="12"
                        Width="246"
                        Height="46"
                        Click="Button_Click_1">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="CircleEditOutline"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock VerticalAlignment="Center"
                                   Margin="7,0,0,0">Actualizar</TextBlock>
                    </WrapPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
