<Page x:Class="ModeloRegistro.views.dashboard.modelos.anexo25.Anexo25"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModeloRegistro.views.dashboard.modelos.anexo25"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Anexo25"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Width="800"
      Height="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="486*" />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="anexo_25._modelo_de_solicitud_poder_especial_para_contraer_matrimonio"
                   VerticalAlignment="Center"
                   Margin="0"
                   Foreground="#FF404E67"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid>
                <TextBox x:Name="buscar"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Buscar"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Padding="45,16,12,16"
                         FontSize="14"
                         materialDesign:HintAssist.FloatingScale="0.80"
                         HorizontalAlignment="Left"
                         Width="223">
                </TextBox>
                <materialDesign:PackIcon Width="30"
                                         Height="30"
                                         Kind="Magnify"
                                         Foreground="#FF404E67"
                                         VerticalAlignment="Center"
                                         Margin="7,0,0,0" />
            </Grid>

            <Grid Grid.Column="1">
                <Button HorizontalAlignment="Right"
                        Margin="0,18,380,18"
                        Background="#FF404E67"
                        BorderBrush="#FF404E67"
                        Click="Button_Click">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="ShapeCirclePlus"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock Margin="5,0,0,0"
                                   VerticalAlignment="Center">Adicionar</TextBlock>
                    </WrapPanel>
                </Button>

                <Button HorizontalAlignment="Right"
                        Margin="0,18,257,18"
                        Background="#FF404E67"
                        BorderBrush="#FF404E67"
                        Click="Button_Click_1">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="CircleEditOutline"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock Margin="5,0,0,0"
                                   VerticalAlignment="Center">Modificar</TextBlock>
                    </WrapPanel>
                </Button>

                <Button HorizontalAlignment="Right"
                        Margin="0,18,134,18"
                        Width="118"
                        Background="#FF404E67"
                        BorderBrush="#FF404E67"
                        Click="Button_Click_2">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="CheckboxMarkedCircleMinusOutline"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock Margin="5,0,0,0"
                                   VerticalAlignment="Center">Eliminar</TextBlock>
                    </WrapPanel>
                </Button>

                <Button HorizontalAlignment="Right"
                        Margin="0,18,11,18"
                        Width="118"
                        Background="#FF404E67"
                        BorderBrush="#FF404E67"
                        Click="Button_Click_3">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="TableArrowRight"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock Margin="5,0,0,0"
                                   VerticalAlignment="Center">Export</TextBlock>
                    </WrapPanel>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <DataGrid x:Name="listadg"
                              ItemsSource="{Binding lista}"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              CanUserReorderColumns="true"
                              materialDesign:DataGridAssist.SelectedCellBorderBrush="#FF404E67">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Foreground"
                                        Value="White" />
                                <Setter Property="Background"
                                        Value="#FF404E67" />
                                <Setter Property="Padding"
                                        Value="12" />
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                </ScrollViewer>
            </materialDesign:Card>

        </Grid>
    </Grid>
</Page>
