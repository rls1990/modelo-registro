<Page x:Class="ModeloRegistro.views.dashboard.modelos.anexo16.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ModeloRegistro.views.dashboard.modelos.anexo16"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="300"
      Title="Add"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Width="800"
      Height="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="486*" />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Text="Adicionar Anexo 16"
                   VerticalAlignment="Center"
                   Margin="24,0,0,0"
                   Foreground="#FF404E67"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap" />
        <Grid Grid.Row="1">
            <Button Style="{StaticResource MaterialDesignFlatLightButton}"
                    ToolTip="MaterialDesignFlatLightButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="Button_Click">
                <WrapPanel>
                    <materialDesign:PackIcon Kind="ArrowLeftDropCircleOutline"
                                             Foreground="#FF404E67"
                                             Width="20"
                                             Height="20"
                                             VerticalAlignment="Center" />
                    <TextBlock Foreground="#FF404E67"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="3,1,0,0">Atrás</TextBlock>
                </WrapPanel>
            </Button>
        </Grid>
        <ScrollViewer Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">APPLICATION FOR VISA FOR TRAVEL TO CUBA/APLICACIÓN DE VISAS PARA VAJAR A CUBA</TextBlock>
                <WrapPanel>
                    <CheckBox x:Name="tirista"
                              Content="Tourist Visa/Turistica"
                              Margin="12" />
                    <CheckBox x:Name="transeuntes"
                              Content="A-2 (Non-residents/Transeúntes"
                              Margin="12" />
                    <CheckBox x:Name="eventos"
                              Content="(A-6) Event/Eventos"
                              Margin="12" />
                    <CheckBox x:Name="invitados"
                              Content="(C) Guests/Invitados"
                              Margin="12" />
                    <CheckBox x:Name="estudiantes_programas_becas"
                              Content="(D-2) Studens and scholarships programs/Estudiantes y programas de becas"
                              Margin="12" />
                    <CheckBox x:Name="artistas"
                              Content="(D-3) Artists/Artistas"
                              Margin="12" />
                    <CheckBox x:Name="periodistas"
                              Content="(D-6) Journalists/Periodistas"
                              Margin="12" />
                    <CheckBox x:Name="religiosos"
                              Content="(D-8) Religious/Religiosos"
                              Margin="12" />

                    <CheckBox x:Name="diplomaticas"
                              Content="(B) Diplomatic/Diplomáticas"
                              Margin="12" />
                    <CheckBox x:Name="tecnicos"
                              Content="(D-1) Técnicos/Technicians"
                              Margin="12" />
                    <CheckBox x:Name="deportistas"
                              Content="(D-4) Athletes/Deportistas"
                              Margin="12" />
                    <CheckBox x:Name="negocios"
                              Content="(D-7) Business/Negocios"
                              Margin="12" />
                    <CheckBox x:Name="otras"
                              Content="Other/ Otras"
                              Margin="12" />
                </WrapPanel>

                <DatePicker x:Name="fecha_solicitud"
                            materialDesign:HintAssist.Hint="Date of Application/Fecha de Solicitud"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />
                <TextBox x:Name="pasaporte"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Passport Number/Número de Pasaporte" />
                <TextBox x:Name="lugar_expedicion"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Place of Expedition/ Lugar de expedición" />

                <DatePicker x:Name="fecha_expedicion"
                            materialDesign:HintAssist.Hint="Date of Expedition/ Fechar de expedición"
                            Margin="12"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.FloatingScale="1"
                            materialDesign:TextFieldAssist.HasClearButton="True" />

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">First and last name as it appears on your passport (Nombre y dos apellidos como aparecen en su pasaporte)</TextBlock>

                <WrapPanel>
                    <TextBox x:Name="primer_apellido"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="First Last Name/Primer apellido"
                             Width="230" />
                    <TextBox x:Name="segundo_apellido"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Second Last Name/ Segundo apellido"
                             Width="230" />
                    <TextBox x:Name="primer_nombre"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="First Name/Primer nombre"
                             Width="230" />
                    <TextBox x:Name="segundo_nombre"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Second Name/Segundo nombre"
                             Width="230" />
                    <TextBox x:Name="padre"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Father/Padre"
                             Width="230" />
                    <TextBox x:Name="madre"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Mother/Madre"
                             Width="230" />
                    <TextBox x:Name="lugar_nacimiento_padres"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Parent's place of birth/lugar de nacimiento de los padre"
                             Width="230" />
                    <TextBox x:Name="estatura"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Height/Estatura(cm)"
                             Width="230" />
                    <TextBox x:Name="estado_civil"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Marital status/Estado Civil"
                             Width="230" />

                    <StackPanel Width="165">
                        <TextBlock Margin="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold">Gender/Sexo</TextBlock>
                        <CheckBox x:Name="m"
                                  Content="Male/Masculino"
                                  Margin="12" />
                        <CheckBox x:Name="f"
                                  Content="Female/Femenino"
                                  Margin="12" />
                    </StackPanel>

                    <StackPanel Width="165">
                        <TextBlock Margin="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold">Eye color/Color Ojos</TextBlock>
                        <CheckBox x:Name="blue_green_claros"
                                  Content="Blue/Green/Claros"
                                  Margin="12" />
                        <CheckBox x:Name="black_negros"
                                  Content="Black/Negros"
                                  Margin="12" />
                        <CheckBox x:Name="pardos"
                                  Content="Brown/Pardos"
                                  Margin="12" />
                    </StackPanel>

                    <StackPanel Width="165">
                        <TextBlock Margin="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold">Skin color/Color Piel</TextBlock>
                        <CheckBox x:Name="piel_blanca"
                                  Content="White/Blanca"
                                  Margin="12" />
                        <CheckBox x:Name="piel_negra"
                                  Content="Black/Negra"
                                  Margin="12" />
                        <CheckBox x:Name="piel_albina"
                                  Content="Albino/Albina"
                                  Margin="12" />
                        <CheckBox x:Name="piel_amarilla"
                                  Content="Yellow/Amarilla"
                                  Margin="12" />
                    </StackPanel>

                    <StackPanel Width="165">
                        <TextBlock Margin="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold">Hair color/Color cabello</TextBlock>
                        <CheckBox x:Name="pelo_canoso"
                                  Content="Grey-haired/Canoso"
                                  Margin="12" />
                        <CheckBox x:Name="pelo_negro"
                                  Content="Black/Negros"
                                  Margin="12" />
                        <CheckBox x:Name="pelo_rubio"
                                  Content="Blond/Rubio"
                                  Margin="12" />
                        <CheckBox x:Name="pelo_castaño"
                                  Content="Brown/Castaño"
                                  Margin="12" />
                        <CheckBox x:Name="pelo_rojo"
                                  Content="Red/Rojo"
                                  Margin="12" />
                        <CheckBox x:Name="pelo_otro"
                                  Content="Other/Otro"
                                  Margin="12" />
                    </StackPanel>
                </WrapPanel>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Place of birth/ Lugar de nacimiento</TextBlock>

                <WrapPanel>
                    <TextBox x:Name="pais"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Country/País"
                             Width="165" />
                    <TextBox x:Name="provincia"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Province (state)/Provincia"
                             Width="165" />
                    <TextBox x:Name="ciudad_municipio"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Locality, City/Municipio/Ciudad"
                             Width="165" />
                    <DatePicker x:Name="fecha_nacimiento"
                                materialDesign:HintAssist.Hint="Date of Birth/Fecha de Nacimiento"
                                Margin="12"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.FloatingScale="1"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Width="165" />
                </WrapPanel>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Place of current residence/Lugar de Residencia actual:</TextBlock>

                <WrapPanel>
                    <TextBox x:Name="direccion"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Home address/ Dirección (Street, Calle, Ave, No., Apto)"
                             Width="230" />
                    <TextBox x:Name="codigo_postal"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Zip Code/ Código Postal"
                             Width="230" />
                    <TextBox x:Name="provincia_estado_region"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Province/Provincia – State/Estado –Region/Región"
                             Width="230" />
                    <TextBox x:Name="pais_residencia_actual"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Country/País"
                             Width="230" />
                    <TextBox x:Name="telefono"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Telephone/Teléfono"
                             Width="230" />
                    <TextBox x:Name="fax"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Fax"
                             Width="230" />
                    <TextBox x:Name="email"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="E-mail"
                             Width="230" />

                </WrapPanel>

                <TextBlock Margin="0"
                           HorizontalAlignment="Center"
                           FontWeight="Bold">Education orWork information/ Datos Laborales o de Estudio actual:</TextBlock>
                <WrapPanel Margin="0,12">
                    <TextBox x:Name="nombre_centro_trabajo_estudio"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Workplace name/ Nombre de Centro de Trabajo/ Study/Estudio"
                             Width="230" />
                    <TextBox x:Name="profecion"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Profession/Profesión"
                             Width="230" />
                    <TextBox x:Name="ocupacion"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Occupation/Ocupación"
                             Width="230" />
                    <TextBox x:Name="direccion_centro"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Work address/Dirección (street/calle, ave, No., apto)"
                             Width="230" />
                    <TextBox x:Name="codigo_postal_centro"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Zip Code/Código Postal"
                             Width="230" />
                    <TextBox x:Name="provincia_estado_region_centro"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Province/Provincia – State/Estado –Region/Región"
                             Width="230" />
                    <TextBox x:Name="pais_centro"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Country/País"
                             Width="230" />
                    <TextBox x:Name="telefono_centro"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Telephone/Teléfono"
                             Width="230" />
                    <TextBox x:Name="fax_centro"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="Fax"
                             Width="230" />
                    <TextBox x:Name="email_centro"
                             Margin="12"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Hint="E-mail"
                             Width="230" />
                </WrapPanel>


                <TextBox x:Name="direccion_estancia_cuba"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Address where you will stay in Cuba/ Dirección donde estará en Cuba" />
                <TextBox x:Name="nombre_apellido_persona_a_vicitar_cuba"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Name and surnames of the person you will visit in Cuba/ Nombre y apellidos de la persona a visitar en Cuba" />
                <TextBox x:Name="motivo_viaje_cuba"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Purpose of your trip/ Motivos del viaje:" />
                <TextBox x:Name="tiempo_estancia"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Length of stay/ Tiempo de estancia:" />
                <TextBox x:Name="lugar_fecha_salida_cuba"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Place and date of your departure for Cuba/ Lugar y fecha de salida para Cuba:" />
                <TextBox x:Name="lugar_fecha_llegada_cuba"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Place and date of your arrival in Cuba/ Lugar y fecha de llegada Cuba:" />
                <TextBox x:Name="proposito_viaje_cuba"
                         Margin="12"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Hint="Have you visited Cuba before, When, Address and purpose/ ha estado anteriormente en Cuba, cuándo, dirección y motivo:" />

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ElevationAssist.Elevation="Dp4"
                        Background="#FF404E67"
                        Foreground="#FFFAFAFA"
                        BorderBrush="#FF404E67"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="12"
                        Width="246"
                        Height="46">
                    <WrapPanel>
                        <materialDesign:PackIcon Kind="CheckboxMarkedCirclePlusOutline"
                                                 Width="20"
                                                 Height="20" />
                        <TextBlock VerticalAlignment="Center"
                                   Margin="7,0,0,0">Adicionar</TextBlock>
                    </WrapPanel>
                </Button>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
